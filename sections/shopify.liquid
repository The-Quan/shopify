{% schema %}
{
  "name": "Example Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Welcome to My Store"
    }
  ]
}
{% endschema %}

<section class="example-section">
  <h2>{{ section.settings.heading }}</h2>
  <p>This is an example section with customizable heading.</p>
</section>
